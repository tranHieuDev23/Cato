    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Local",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/cato/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "--no-browser",
                "--pull-image-at-startup=false"
            ]
        },
        {
            "name": "Launch Distributed Host",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/cato/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "--distributed",
                "--no-browser"
            ]
        },
        {
            "name": "Launch Distributed Worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/cato/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "--distributed",
                "--worker",
                "--no-browser"
            ]
        }
    ]
}